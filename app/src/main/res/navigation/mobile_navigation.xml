<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_recent">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.gamekeyprices_app.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/nav_home_second" />
    </fragment>

    <fragment
        android:id="@+id/nav_action"
        android:name="com.example.gamekeyprices_app.ui.category.action.ActionFragment"
        android:label="@string/menu_action"
        tools:layout="@layout/fragment_action">
    </fragment>

    <fragment
        android:id="@+id/nav_adventure"
        android:name="com.example.gamekeyprices_app.ui.category.adventure.AdventureFragment"
        android:label="@string/menu_adventure"
        tools:layout="@layout/fragment_adventure">
    </fragment>

    <fragment
        android:id="@+id/nav_recent"
        android:name="com.example.gamekeyprices_app.ui.recent.RecentFragment"
        android:label="@string/menu_recent"
        tools:layout="@layout/fragment_recent">
    </fragment>

    <fragment
        android:id="@+id/nav_home_second"
        android:name="com.example.gamekeyprices_app.ui.home.HomeSecondFragment"
        android:label="@string/home_second"
        tools:layout="@layout/fragment_home_second">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/nav_home" />

        <argument
            android:name="myArg"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_favorites"
        android:name="com.example.gamekeyprices_app.ui.favorites.FavoritesFragment"
        android:label="@string/menu_favorites"
        tools:layout="@layout/fragment_favorites" />
</navigation>